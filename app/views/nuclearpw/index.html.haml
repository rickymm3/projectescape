  = form_tag checkpw_nuclearpw_index_path do
    .date.form-group
      .white
        Month
      = select_tag :one, options_for_select(0..9), class: 'custom-select custom-select-lg mb-3'
      = select_tag :two, options_for_select(0..9)
      .white
        Day
      = select_tag :three, options_for_select(0..9)
      = select_tag :four, options_for_select(0..9)
      .white.custom-select
        Year
      = select_tag :five, options_for_select(0..9)
      = select_tag :six, options_for_select(0..9)
    .actions
      = submit_tag 'Submit', class: "btn-warning btn"


